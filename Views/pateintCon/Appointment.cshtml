@{
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

@model IEnumerable<Web1.Models.JoinTable>

<style>
    table {
        margin: 0 auto;           
        font-size: medium;        
        border-collapse: separate;
        border-spacing: 45px;     
    }
</style>

<main>
    <div class="whole-wrap">
        <div class="container box_1170">
            <div class="section-top-border">
                <h3 class="mb-30">Available time</h3>

                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Start time</th>
                            <th>End time</th>
                            <th>Book</th>
                           
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                              
                                <td>@item.JTavailabiltyDate.Date?.ToString("dd/MM/yyyy")</td>
                                <td>@item.JTappontment.StartTime</td>
                                <td>@item.JTappontment.EndTime</td>
                                <td>
                                    <form method="post" asp-action="Book">
                                        <input type="hidden" name="appointmentId" value="@item.JTappontment.AppontmentId" />
                                        <button type="submit" class="genric-btn success radius">Book appointment</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
