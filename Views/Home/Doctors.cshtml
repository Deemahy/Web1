
@model IEnumerable<Web1.Models.JoinTable>
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<main>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>Doctors</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!--? Team Start -->
    <div class="team-area section-padding30">
        <div class="container">
            <!-- Section Tittle -->
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-tittle text-center mb-100">
                        <span>Our Doctors</span>
                       
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var item in Model)
                {
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-">
                    <div class="single-team mb-30">
                        <div class="team-img">
                           
                        </div>
                        <div class="team-caption">
                            <h3><a href="#">@item.JTuser.FullName</a></h3>
                            <span>@item.JTuser.Email</span>
                                <span>@item.JTuser.Phone</span>
                                <span>@item.JTdoctor.Speclized</span>
                                <span>@item.JTdoctor.OtherInfo</span>
                            <!-- Team social -->
                            <div >

                                    <h4> <a href="/Home/Appointment/@item.JTdoctor.DoctorId" class="genric-btn link-border">Appointment</a></h4> 
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
    <!-- Team End -->
</main>