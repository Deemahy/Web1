@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
@model IEnumerable<Web1.Models.AvailabiltyDate>;
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <!-- column -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add avaliable date </h4>
                    </div>
                    <div class="comment-widgets scrollable">
                        <!-- Comment Row -->
                        <div class="d-flex flex-row comment-row m-t-0">
                            <form class="form-horizontal form-material mx-2" asp-action="FormDay">
                                <div class="form-group">
                                    <label class="col-md-12">Date</label>
                                    <div class="col-md-12">
                                        <input type="date" placeholder="DD/MM/YYYY"  class="form-control form-control-line" name="Date" value="" required>
                                    </div>
                                </div>
                                @*/////*@
                                

                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button class="btn btn-success text-white">Update Date </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <!-- column -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Available time </h4>

                        <div class="col-lg-8 col-xlg-9 col-md-7">
                            <div class="card">
                                <div class="card-body">
                                    <form class="form-horizontal form-material mx-2" asp-action="addTime">
                                        @*<div class="form-group">
                                            <label for="AvailabiltyDateId" class="control-label"></label>
                                            <select for="AvailabiltyDateId" class="form-control" asp-items="@ViewBag.AvailabilityDates">

                                            </select>
                                          
                                            <span  name="AvailabiltyDateId" class="text-danger"></span>
                                        </div>*@
                                        <div class="form-group">
                                            <label for="AvailabiltyDateId" class="control-label">Availability Date</label>
                                            <select id="AvailabiltyDateId" name="AvailabiltyDateId" class="form-control" asp-items="@ViewBag.AvailabilityDates">
                                                <option value="">Select an availability date</option>
                                            </select>
                                            <span name="AvailabiltyDateId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-12">Start time </label>
                                            <div class="col-md-12">
                                                <input type="time" placeholder="HH:MM"
                                                       class="form-control form-control-line" name="StartTime" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-12">End time </label>
                                            <div class="col-md-12">
                                                <input type="time" placeholder="HH:MM"
                                                       class="form-control form-control-line" name="EndTime" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <button class="btn btn-success text-white">Update Date </button>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                    </div>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div>